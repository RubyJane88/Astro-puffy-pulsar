---
import BaseLayout from "../layouts/BaseLayout.astro";
import Card from '../components/Card.astro';
const {pageTitle} = "Astro Home"

const cards = [
    {
        href: 'https://docs.astro.build1',
        title: 'Naruto1',
        body: 'Naruto is a Japanese manga series written and illustrated by Masashi Kishimoto. It tells the story of Naruto Uzumaki, a young ninja who seeks recognition...',
        src: "/naruto.webp",
        width: 300,
        height: 300
    },
    {
        href: 'https://docs.astro.build2',
        title: 'Sasuke',
        body: 'Sasuke Uchiha (うちはサスケ, Uchiha Sasuke) is one of the last surviving members of Konohagakures Uchiha clan. After his older brother, Itachi, slaughtered ..',
        src: "/sasuke.webp",
        width: 300,
        height: 300
    },
    {
        href: 'https://docs.astro.build3',
        title: 'Boruto',
        body: 'Boruto is a spin-off and a sequel to Kishimoto\'s Naruto, which follows the exploits of Naruto Uzumaki\'s son, Boruto Uzumaki, and his ninja team. Boruto: Naruto ...',
        src: '/naruto-1.jpeg',
        width: 300,
        height: 300
    }
]
---

<BaseLayout pageTitle={pageTitle}>
<main>
    <ul role="list" class="link-card-grid">
        {cards.map(({href, title, body, src, alt, width, height}) => (
                <Card
                        href={href}
                        title={title}
                        body={body}
                />
           <div class="image-container">
               <img src={src} width={width} height={height}/>
           </div>
        ))}
    </ul>
</main>


    <style>
        .image-container {
            display: grid;
            justify-content: center;
            align-items: center;
            text-align: center;
        }
    </style>

</BaseLayout>


